<%= form_tag path, method: method do %>

	<p><%= label_tag :name %>
	<%= text_field_tag :name, name %></p>

	<p><%= label_tag :percent_off %> (as decimal)
	<%= text_field_tag :percent_off, percent_off %></p>

	<p><%= label_tag :bulk_minimum %>
	<%= text_field_tag :bulk_minimum, bulk_minimum %></p>

	<%= submit_tag button_text %>
<% end %>
